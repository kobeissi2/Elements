<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/item_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:clickable="false"
        android:focusable="false"
        android:padding="8dp"
        android:textColor="@color/colorTextPrimary"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/colorHighlight"
        app:strokeColor="@color/colorStroke"
        app:strokeWidth="1dp"
        tools:text="Item" />

    <ProgressBar
        android:id="@+id/item_progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.5"
        android:indeterminate="false"
        android:progressTint="@color/colorPrimary"
        android:progress="0"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/item_button"
        app:layout_constraintEnd_toEndOf="@id/item_button"
        app:layout_constraintStart_toStartOf="@id/item_button"
        app:layout_constraintTop_toTopOf="@id/item_button"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>